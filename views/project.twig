{% extends "base.twig" %}
{% block content %}
<div class="columns is-vcentered is-variable is-8-widescreen">
    <div class="column is-9">
        <div class="header has-small-padding-bottom">
            <a href="{{site.link}}" class="link arrow left">Go back</a>
            <br>
            <h1 class="is-size-3 is-size-2-desktop" style="margin-top:1rem">{{post.title}}</h1>
            {% for tag in post.tags %}
                <div class="tag">{{tag.name}}</div>
            {% endfor %}
        </div>
        <div class="content infinite with-header">
        {{post.content}}
        </div>
    </div>
    <div class="column">
        <div class="header with-divider right has-small-padding-bottom">
            <span></span>
            <h2 class="is-size-4">Portfolio work</h2>
        </div>
        <div class="projects-grid infinite small">
            {% for project in projects %}

                {% include 'partials/project-card.twig' with {'selected': project.id == post.id ? true : false}%}
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}